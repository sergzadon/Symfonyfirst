{# empty Twig template #}
{% extends 'admin/baseadmin.html.twig'%}
{% block title %} AdminArticles {% endblock %}

{% block body %}
    {% if users  is defined  %}
        <table class="table">
    <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Email</th>
      <th scope="col">Логин</th>
      <th scope="col">Зарегистрирован</th>
      <th scope="col"></th>
    </tr>
     </thead>
     <tbody>
     {% for user in users %}
     <tr>
        <td> {{ user.id }}</td>
        <td>{{user.email}}</td>
        <td>{{user.roles | json_encode}}</td>
        <td>{{user.timestamp | date('d-m-Y')}}</td>
        <td>  <a href="#"class="btn btn-primary  btn-sm">Редактировать</a></td>
    </tr>
     {% endfor %}
     </tbody>
    </table>
      <div class="container">
        <div class="row no-gutters ">
            <div class="col-12 mt-3">
                <a href="{{ path ("admin_create_user") }}" class="btn btn-success btn-sm">Создать пользователя</a>
            </div>
        </div>
    </div>
     {% else %}
         <p> Список пользователей пуст. </p>
     {% endif %}
{% endblock %}